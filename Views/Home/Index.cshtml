@model IEnumerable<BigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}
<ul style="list-style:none" class="course">
        @foreach (var course in Model)
        {
            <li style="position: relative; margin-bottom: 30px;">
                <div style="text-align: center; background-color:#d41d50; color: white; width: 60px; border-radius:8px" class="date">
                    <div class="moth">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div style="position: absolute; top: 0px; left:70px;" class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                    <button  ></button>
                </div>
            </li>
        }
</ul>